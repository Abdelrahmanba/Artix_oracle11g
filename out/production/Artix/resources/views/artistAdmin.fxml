<StackPane fx:id="stackPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.ArtistsAdminController">
   <children>
      <VBox cache="true" cacheHint="SPEED" maxHeight="801.0" minHeight="720.0" prefHeight="720.0" prefWidth="1000.0">
         <children>
            <Pane cache="true" cacheHint="SPEED" prefHeight="130.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to top right,#03A9F4,#00bae8);">
               <children>
                  <Text cache="true" cacheHint="SPEED" fill="WHITE" layoutX="175.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Artists">
                     <font>
                        <Font name="Leelawadee UI" size="41.0" />
                     </font>
                     <effect>
                        <Blend mode="LIGHTEN">
                           <topInput>
                              <Glow />
                           </topInput>
                        </Blend>
                     </effect>
                  </Text>
                  <JFXHamburger fx:id="ham" cache="true" cacheHint="SPEED" layoutX="14.0" layoutY="14.0" onMouseClicked="#hamEvent" prefHeight="29.0" prefWidth="45.0" stylesheets="@../Buttons.css" />
                  <JFXTextField fx:id="filter" focusColor="#e4f6ff" focusTraversable="false" layoutX="741.0" layoutY="90.0" prefHeight="25.0" prefWidth="238.0" promptText="Filter by Name or No. of Paintings" style="-fx-prompt-text-fill: white; -fx-text-inner-color: white;" unFocusColor="WHITE" />
               </children>
            </Pane>
            <Pane cache="true" cacheHint="SPEED" prefHeight="590.0" prefWidth="1000.0" style="-fx-background-color: #e4f6ff;">
               <children>
                  <ImageView cache="true" cacheHint="SPEED" fitHeight="591.0" fitWidth="219.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/Van%20Gogh.jpg" />
                     </image>
                  </ImageView>
                  <ScrollPane layoutX="160.0" layoutY="39.0" prefWidth="840.0">
                     <content>
                        <JFXTreeTableView fx:id="table" cache="true" cacheHint="SPEED" focusTraversable="false" pickOnBounds="false" prefHeight="549.0" prefWidth="838.0" stylesheets="@../Table.css" />
                     </content>
                  </ScrollPane>
                  <JFXDrawer fx:id="drawer" cache="true" cacheHint="SPEED" defaultDrawerSize="160.0" prefHeight="590.0" prefWidth="160.0" />
                  <HBox alignment="TOP_CENTER" layoutX="160.0" layoutY="-2.0" minHeight="38.0" prefHeight="55.0" prefWidth="841.0">
                     <children>
                        <JFXButton focusTraversable="false" minWidth="280.0" onAction="#addArtist" prefHeight="42.0" prefWidth="290.0" text="     Add" textFill="#0286c2">
                           <font>
                              <Font size="16.0" />
                           </font>
                           <graphic>
                              <MaterialDesignIconView fill="#0286c2" glyphName="ACCOUNT_PLUS" size="30" />
                           </graphic>
                        </JFXButton>
                        <JFXButton fx:id="updateB" disable="true" focusTraversable="false" minWidth="280.0" onAction="#updateArtist" text="    Update" textFill="#0286c2">
                           <font>
                              <Font size="16.0" />
                           </font>
                           <graphic>
                              <MaterialDesignIconView fill="#0286c2" glyphName="UPDATE" size="30" />
                           </graphic>
                        </JFXButton>
                        <JFXButton fx:id="exploreB" disable="true" focusTraversable="false" minHeight="42.0" minWidth="280.0" onAction="#explore" text="    Explore" textFill="#0286c2">
                           <font>
                              <Font size="16.0" />
                           </font>
                           <graphic>
                              <OctIconView fill="#0286c2" glyphName="LINK_EXTERNAL" size="25" />
                           </graphic>
                        </JFXButton>
                     </children>
                  </HBox>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</StackPane>
